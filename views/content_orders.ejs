<table id="order_table"></table>
<script>
    $('#order_table').bootstrapTable({
        url: 'order/all',
        method: 'get',
        toolbar: '#toolbar',
        striped: true,
        pagination: true,
        sortable: true,
        sortOrder: "asc",
        sidePagination: "client",
        pageNumber:1,
        pageSize: 10,
        pageList: [10, 25, 50, 100],
        // selectItemName:"orderLocation",
        search: true,
        showColumns: true,
        minimumCountColumns: 2,
        showRefresh: true,
        uniqueId: "orderID",

        columns: [{
            checkbox: true,
            clickToSelect: true
        },{
            searchable:true,
            field: 'orderID',
            title: 'ID'
        }, {
            searchable:true,
            field: 'orderLocation',
            title: 'Order Location'
        }, {
            searchable:false,
            field: 'dropOff',
            title: 'Drop Off'
        }, {
            searchable:false,
            field: 'timeWindow',
            title: 'Time Window'
        },{
            searchable:false,
            field: 'weight',
            title: 'Weight (Kg)'
        },{
            searchable:false,
            field: 'volume',
            title: 'Volume (m3)'
        },{
            searchable:false,
            field: 'fixDockingSlotNeeded',
            title: 'Fix Docking Slot Needed'
        },{
            searchable:false,
            field: 'description',
            title: 'Description'
        },{
            searchable:true,
            field: 'ftl',
            title: 'FTL/LTL'
        },{
            searchable:false,
            field: 'sequenceOfOrder',
            title: 'Sequence of Order'
        },]
    });
</script>
